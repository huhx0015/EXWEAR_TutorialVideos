<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gpop.exwear"
    android:versionCode="1"
    android:versionName="0.01"
    android:installLocation="auto" >

    <uses-sdk android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.flash" android:required="false"/>

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ex_icon"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:launchMode="singleInstance"
        android:debuggable="false"
        >

        <activity android:name=".EXSplash"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.gpop.exwear.EXMain"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"
            >

            <intent-filter>
                <action android:name="com.gpop.exwear.MAINACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity android:name="com.mirasense.demos.ScanditSDKGlassActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensor">

            <intent-filter>
                <action android:name="com.mirasense.demos.SCANDIT"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/say_initiate_scan" />
        </activity>
        <activity android:name="com.mirasense.demos.ScanditSDKDemo"
            android:screenOrientation="sensor"
            android:label="@string/app_name">
        </activity>
        <activity android:name="com.mirasense.demos.ScanditSDKSampleBarcodeActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensor">
        </activity>
        <activity android:name="com.mirasense.demos.SettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensor">
        </activity>

        <activity android:name="com.mirasense.demos.JsonParser"
            android:screenOrientation="sensor"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>
